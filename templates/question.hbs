<!-- We have access to the properties of a Question
because a model with the same name exists (?)-->

{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="question">Question:</label>
      {{input value=question id="question" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="description">Description:</label>
      {{input value=description id="description" class="form-control"}}
    </div>

    <button class="btn btn-xs btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}
  <h2>{{question}}</h2>
  <h3>By {{author}}</h3>
  <p>{{description}}</p>

  <button class="btn btn-xs btn-primary" {{action 'edit'}}>Edit Question</button>
  <button class="btn btn-xs btn-danger" {{action 'deleteQuestion'}}>Delete Question</button>
  <br>
  {{outlet}}
{{/if}}

<br>
<p>{{#link-to 'new-answer' this class="btn btn-sm btn-success"}}New Answer{{/link-to}}</p>

{{#each comment in comments itemController="comment"}}
  <p>
    {{comment.text}}
    <button class="btn btn-xs btn-danger" {{action 'deleteAnswer'}}>delete</button>
  </p>
{{/each}}
