<h2>Ask Away!</h2>
<form>
  <div class="form-group">
    <label for="question">Question:</label>
    {{input value=question id="question" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="description">Description:</label>
    {{input value=description id="description" class="form-control"}}
  </div>

  <button class="btn btn-warning" {{action 'ask'}}>Ask</button>
</form>
